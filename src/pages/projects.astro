---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard';
import projectList from '../components/projects.json';
---

<Layout title="Projects">
	<main class="flex justify-center flex-col lg:mx-20">
		<h1 class="text-6xl lg:mt-10">Projects</h1>
		<p class="mb-10 text-xl">Showcase-worthy things. Kind of.</p>

		<h2 class="text-4xl lg:mb-10">Featured</h2>
		{projectList.map((data)=> <ProjectCard title={data.title} text={data.text} link={data.link} github={data.github}/> )}
	</main>
</Layout>